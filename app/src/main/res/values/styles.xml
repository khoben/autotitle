    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:windowMinWidthMinor">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MyTitleStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">50dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LicenseTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:background">#F7F7F7</item>
        <item name="android:fontFamily">sans-serif-monospace</item>
        <item name="android:textAlignment">2</item>
    </style>

