<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="overlay"
            type="com.khoben.autotitle.huawei.ui.overlay.OverlayDataMapper" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/overlay_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                app:overlayFromString="@{overlay}"
                tools:text="from" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" â€” "
                android:textSize="12sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/overlay_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                app:overlayToString="@{overlay}"
                tools:text="to" />
        </LinearLayout>

        <LinearLayout
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                app:overlayContentString="@{overlay}"
                tools:text="content" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_recycler_item"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_gravity="center|end"
                app:icon="@drawable/arrow_downward_white_24dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:padding="0dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:iconSize="20dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:strokeColor="?colorPrimary"
                app:iconTint="@color/white75"
                android:layout_marginBottom="-28dp"
                android:backgroundTint="@color/black"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle" />
        </LinearLayout>
    </LinearLayout>
</layout>