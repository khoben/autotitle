<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="overlay"
            type="com.khoben.autotitle.huawei.ui.overlay.OverlayDataMapper" />
    </data>
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/overlay_from"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="from"
                app:overlayFromString="@{overlay}" />

            <TextView
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - " />

            <TextView
                android:textSize="12sp"
                android:id="@+id/overlay_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to"
                app:overlayToString="@{overlay}"
                />

            <!--            <Button-->
            <!--                android:layout_width="45dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_gravity="top|end"-->
            <!--                android:elevation="1dp"-->
            <!--                android:text="+" />-->
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="16dp">
        <TextView
            android:id="@+id/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text = "content"
            app:overlayContentString="@{overlay}"
            android:textStyle="bold"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_recycler_item"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:icon="@drawable/ic_down_arrow"
            app:iconSize="24dp"
            app:iconGravity="textStart"
            android:padding="0dp"
            android:layout_gravity="center|end"
            app:iconPadding="0dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
            />
    </LinearLayout>
    </LinearLayout>
</layout>